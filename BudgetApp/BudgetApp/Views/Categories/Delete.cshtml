@model BudgetApp.Models.CategoryModels.Category
@{LanguageControl l = new LanguageControl("DK");}

<h3>@l.SureToDelete</h3>
<hr />
<div>    
    <dl class="row">
        <dt class = "col-sm-2">@l.CategoryTypeName</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryType.CategoryTypeName)
        </dd>
        <dt class = "col-sm-2">@l.CategoryName</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value=@l.DeleteButton class="btn btn-danger" />
    </form>
    <br />
    <div>
        <a asp-action="CategoryList">
            <img src="~/img/bootstrap-icons-1.8.1/arrow-left.svg" aria-hidden="true"/> 
            @l.BackToList
        </a>
    </div>
</div>
