@model BudgetApp.Models.CategoryModels.Subcategory
@{LanguageControl l = new LanguageControl("DK");}

<h3>@l.SureToDelete</h3>
<hr />
<div>    
    <dl class="row">
        <dt class = "col-sm-2">@l.CategoryName</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class = "col-sm-2">@l.SubCategoryName</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubcategoryName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SubcategoryId" />
        <input type="submit" value=@l.DeleteButton class="btn btn-danger" />
    </form>
    <br />
    <div>
    <a asp-action="SubcategoryList">
        <img src="~/img/bootstrap-icons-1.8.1/arrow-left.svg" aria-hidden="true"/> 
        @l.BackToList
    </a>
    </div>
</div>
